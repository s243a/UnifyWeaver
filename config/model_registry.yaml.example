  #   description: "s243a_groups account model"
  #   embedding_model: nomic-embed-text-v1.5
  #   source:
  #     local: "models/pearltrees_federated_s243a_groups.pkl"
  #     private_fallback: "${DROPBOX}/UnifyWeaver/models/pearltrees_federated_s243a_groups.pkl"
  #   training:
  #     script: "scripts/train_pearltrees_federated.py"
  #     data: "reports/pearltrees_targets_s243a_groups.jsonl"
  #   accounts:
  #     - s243a_groups

# =============================================================================
# HuggingFace Token (for private models)
# =============================================================================
# huggingface_token: ${HF_TOKEN}

