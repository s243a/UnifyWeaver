{
  "name": "rust-ffi-node-rpyc",
  "version": "0.1.0",
  "description": "Node.js + React + Rust FFI + RPyC Integration",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "ts-node src/test.ts",
    "build:rust": "cd .. && cd rust-ffi-go && cargo build --release && cp target/release/librpyc_bridge.so ../rust-ffi-node/",
    "frontend": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "koffi": "^2.8.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
